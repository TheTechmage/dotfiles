#pacstrap /mnt base || exit
#pacstrap /mnt vim xorg-server{,-utils} slim syslinux xfce4 subtle git zsh libvirt xf86-video-{intel,nouveau} tmux screen openssh || exit
#pacstrap /mnt htop lsof samba ncdu tree nfs-utils sudo python virtualbox abs base-devel chromium xscreensaver || exit
pacstrap /mnt mpd virt-manager sshfs qemu bridge-utils openbsd-netcat virtviewer
echo -e 'LANG="en_US.UTF-8"\nLC_COLLATE="C"'>> /mnt/etc/locale.conf
sed -i 's/^#\(en_US\|ja_JP\)/\1/' /mnt/etc/locale.gen
cat <<EOCHROOT | arch-chroot /mnt
mkinitcpio -p linux
locale-gen
ln -s /usr/share/zoneinfo/America/Denver /etc/localtime
groupadd libvirt

cat <<EOF > /etc/polkit-1/rules.d/50-org.libvirt.unix.manage.rules
polkit.addRule(function(action, subject) {
	if (action.id == "org.libvirt.unix.manage" &&
	    subject.isInGroup("libvirt")) {
		return polkit.Result.Yes;
	}
});
EOF

useradd -m -G wheel,systemd-journal,mpd,vboxusers,libvirt -s /bin/zsh frosty
cat <<EOSU | su - frosty
	git clone https://github.com/frostyfrog/dotfiles.git .files
	cd .files
	git submodule update --init --recursive
	./autocopy
EOSU
systemctl enable libvirtd sshd slim mpd
EOCHROOT


